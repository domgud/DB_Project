                    @Html.EditorFor(model => model.zanras, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.zanras, "", new { @class = "text-danger" })
                </div>
            </div>


            @* leidejas *@
